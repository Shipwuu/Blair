-- This script creates a new part if the path "Ghost" appears in the Workspace
-- It will create a transparent part that can be penetrated, positioned near the "Ghost" part
-- Make sure to execute this using your Roblox Executor

local function createGhostPart()
    -- Check if "Ghost" exists in the workspace
    local ghost = game.Workspace:FindFirstChild("Ghost")
    if ghost and ghost:FindFirstChild("HumanoidRootPart") then
        -- Get the position of the Ghost's HumanoidRootPart
        local ghostPosition = ghost.HumanoidRootPart.Position
        
        -- Create a new part outside of the "Ghost" part
        local newPart = Instance.new("Part")
        newPart.Size = Vector3.new(2, 2, 2) -- Small part size
        newPart.Transparency = 0.5 -- Semi-transparent
        newPart.CanCollide = false -- Can be penetrated
        newPart.Anchored = true
        newPart.Position = ghostPosition + Vector3.new(5, 0, 5) -- Offset to ensure it doesn't merge with Ghost part
        newPart.Parent = game.Workspace
        
        -- Create a BillboardGui with a TextLabel to make the part identifiable
        local billboardGui = Instance.new("BillboardGui")
        billboardGui.Size = UDim2.new(0, 100, 0, 50)
        billboardGui.Adornee = newPart
        billboardGui.AlwaysOnTop = true
        billboardGui.Parent = newPart
        
        local textLabel = Instance.new("TextLabel")
        textLabel.Size = UDim2.new(1, 0, 1, 0)
        textLabel.Text = "Ghost Detected"
        textLabel.TextColor3 = Color3.new(1, 0, 0)
        textLabel.BackgroundTransparency = 1
        textLabel.Parent = billboardGui
    end
end

-- Listen for changes in the Workspace to detect when "Ghost" appears
game.Workspace.ChildAdded:Connect(function(child)
    if child.Name == "Ghost" then
        createGhostPart()
    end
end)

-- Initial check in case "Ghost" is already present
if game.Workspace:FindFirstChild("Ghost") then
    createGhostPart()
end
