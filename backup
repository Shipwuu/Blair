-- Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Check for existing GUI and destroy if found (to prevent duplication)
if LocalPlayer:WaitForChild("PlayerGui"):FindFirstChild("MainGui") then
    LocalPlayer.PlayerGui.MainGui:Destroy()
end

-- Create a new ScreenGui
local mainGui = Instance.new("ScreenGui")
mainGui.Name = "MainGui"
mainGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
mainGui.ResetOnSpawn = false

-- Create the main frame
local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Size = UDim2.new(0, 250, 0, 400)  -- Height adjusted to 400 pixels
mainFrame.Position = UDim2.new(0, 10, 0.5, -200)  -- Center-left of the screen with adjusted vertical position
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)  -- Black background color
mainFrame.BackgroundTransparency = 0.8  -- Almost transparent
mainFrame.BorderSizePixel = 1  -- Set to 1 for a visible border
mainFrame.BorderColor3 = Color3.fromRGB(255, 255, 255)  -- White color for border
mainFrame.Parent = mainGui

-- Add UICorner to main frame
local cornerMain = Instance.new("UICorner")
cornerMain.CornerRadius = UDim.new(0, 10)  -- Adjust corner radius as needed
cornerMain.Parent = mainFrame

-- Create Timer Frame
local timerFrame = Instance.new("Frame")
timerFrame.Name = "TimerFrame"
timerFrame.Size = UDim2.new(0, 200, 0, 50) -- Smaller size to fit within the main frame
timerFrame.Position = UDim2.new(0.5, -100, 0.5, -25) -- Centered in the main frame both horizontally and vertically
timerFrame.AnchorPoint = Vector2.new(0.5, 0.5) -- Anchor point set to the center
timerFrame.BackgroundTransparency = 1 -- Fully transparent background
timerFrame.BorderSizePixel = 1  -- Set to 1 for a visible border
timerFrame.BorderColor3 = Color3.fromRGB(255, 255, 255)  -- White color for border
timerFrame.Parent = mainFrame

-- Add UICorner to timer frame
local cornerTimer = Instance.new("UICorner")
cornerTimer.CornerRadius = UDim.new(0, 15)  -- More rounded corners for a slightly oval shape
cornerTimer.Parent = timerFrame

-- Timer Script Integration
local timerLabel = Instance.new("TextLabel")
timerLabel.Name = "TimerLabel"
timerLabel.Parent = timerFrame
timerLabel.Size = UDim2.new(1, -20, 1, -20) -- Make it smaller inside the frame to give it padding
timerLabel.Position = UDim2.new(0.5, 0, 0.5, 0)
timerLabel.AnchorPoint = Vector2.new(0.5, 0.5) -- Center in the frame
timerLabel.BackgroundTransparency = 1 -- Fully transparent background
timerLabel.TextColor3 = Color3.new(1, 1, 1) -- White text
timerLabel.Font = Enum.Font.SourceSansBold
timerLabel.TextScaled = true
timerLabel.Text = "00:00" -- Initial text

-- Define the path to the Timer TextLabel
local timerTextPath = workspace:WaitForChild("Map"):WaitForChild("Van"):WaitForChild("Van")
                        :WaitForChild("TimerModel"):WaitForChild("Monitor")
                        :WaitForChild("SurfaceGui"):WaitForChild("Timer")

-- Function to update the time on the screen
local function updateTime()
    while true do
        if timerTextPath and timerTextPath:IsA("TextLabel") then
            timerLabel.Text = timerTextPath.Text -- Update the ScreenGui label text with the timer's text
        else
            warn("Timer TextLabel not found or is not a TextLabel instance")
        end
        wait(1) -- Wait for 1 second before updating again
    end
end

-- Start the time update loop without blocking the script
spawn(updateTime)

print("check 2")
