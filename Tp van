-- Create a ScreenGui and TextButton
local screenGui = Instance.new("ScreenGui")
local teleportButton = Instance.new("TextButton")

-- Set up the ScreenGui
screenGui.Name = "TeleportGui"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Set up the Teleport Button
teleportButton.Name = "TeleportButton"
teleportButton.Parent = screenGui
teleportButton.Text = "Teleport to Van Spawn"
teleportButton.Size = UDim2.new(0, 200, 0, 50) -- Button size (200x50 pixels)
teleportButton.Position = UDim2.new(0.5, -100, 0.9, -25) -- Centered at the bottom of the screen
teleportButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255) -- Light blue color
teleportButton.TextColor3 = Color3.new(1, 1, 1) -- White text
teleportButton.Font = Enum.Font.SourceSansBold
teleportButton.TextScaled = true

-- Teleportation Function
local function teleportPlayer()
    local gotopartDelay = 0.1
    local targetPart = workspace:FindFirstChild("Map"):FindFirstChild("Van"):FindFirstChild("SpawnLocation")
    
    if targetPart and targetPart:IsA("BasePart") then
        local speaker = game.Players.LocalPlayer
        if speaker.Character and speaker.Character:FindFirstChildOfClass('Humanoid') then
            local humanoid = speaker.Character:FindFirstChildOfClass('Humanoid')
            if humanoid.SeatPart then
                humanoid.Sit = false
                wait(0.1)
            end
            wait(gotopartDelay)
            speaker.Character:WaitForChild("HumanoidRootPart").CFrame = targetPart.CFrame
        end
    else
        warn("Target part not found or is not a BasePart")
    end
end

-- Connect the function to the button's MouseButton1Click event
teleportButton.MouseButton1Click:Connect(teleportPlayer)
